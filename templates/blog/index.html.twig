{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<section class="articles">
	<div class="row">
			<article>
				{% for article in articles %}
					<h2>{{ article.title }}</h2>
					<div class="metadata">Ecrit le {{ article.createdAt | date("d/m/Y") }} a {{ article.createdAt | date('H:i:s') }} dans la categorie {{ article.category.title }} </div>
					<div class="content">
						<img src="{{ article.image }}" alt="">
						<p> {{ article.content | raw }} </p>
						<a href="{{ path('blog_show', {'id': article.id}) }}" class="btn btn-primary">Lire la suire</a>
					</div>
				{% endfor %}
			</article>
	</div>
</section>


{% endblock %}
