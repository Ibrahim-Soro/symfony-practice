{% extends "base.html.twig" %}
{% block body %}
    <h1>Inscription au blog</h1>
    {{ form_start(form) }}
        {{ form_row(form.username, {'label': 'Nom d\'utilisateur:' ,'attr': {'placeholder': 'Votre Nom'}}) }}
        {{ form_row(form.email, {'label': 'Adresse email:', 'attr': {'placeholder': 'Votre adresse email (exmple@gmail.com)'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe:', 'attr': {'placeholder': 'Votre mot de passe', 'type': 'password'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmer le mot de passe:', 'attr': {'placeholder': 'Confirmer votre mot de passe'}}) }}
        <button type="submit" class="btn btn-dark">S'inscrire</button>
    {{ form_end(form) }}
{% endblock %}